<div class="bg-contact2" style="background-image: url('images/bg-01.png');">
	<div class="container-contact2">
		<div class="wrap-contact2">
			<form class="contact2-form" method="GET" action="http://localhost:4000/goals">
				<span class="contact2-form-title">
					Edit Goal
				</span>

				<div class="wrap-input2">
					<input class="input2" type="text" name="gname" placeholder="Goal Name" value="{{goaldata.gname}}" required>
					<span class="focus-input2"></span>
				</div>

				<div class="wrap-input2">
					<input class="input2" type="number" name="gamount" min="0" placeholder="Goal Amount" value="{{goaldata.gamount}}"
					 required>
					<span class="focus-input2"></span>
				</div>

				<div class="wrap-input2" required>
					<input class="input2" type="number" name="gpriority" min="1" max="3" placeholder="Goal Priority" value="{{goaldata.gpriority}}"
					 required>
					<span class="focus-input2"></span>
				</div>

				<div class="wrap-input2" required>
					<textarea class="input2" name="gdescription" placeholder="Description" value="{{goaldata.gdescription}}" required></textarea>
					<span class="focus-input2"></span>
				</div>

				<div class="wrap-input2" required>
					<input class="input2" type="number" name="gpercent" min="1" max="100" value="{{goaldata.gpercent}}" placeholder="Specific % to be allocated"
					 required>
					<span class="focus-input2"></span>
				</div>
				{{!-- <a href="http://localhost:4000/goals" style="text-decoration:none"> --}}
					<div class="container-contact2-form-btn">
						<div class="wrap-contact2-form-btn">
							<div class="contact2-form-bgbtn"></div>

							<button class="contact2-form-btn" type="submit">
								Edit Goal
							</button>

						</div>
					</div>
					{{!-- </a> --}}
				<a href="http://localhost:4000/goals">
					<div class="container-contact2-form-btn">
						<div class="wrap-contact2-form-btn">
							<div class="contact3-form-bgbtn"></div>

							<button class="contact2-form-btn">
								Cancel
							</button>
						</div>
					</div>
				</a>
			</form>
		</div>
	</div>
</div>
